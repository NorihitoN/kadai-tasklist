<h1>Task<%= @task.id %>の詳細</h1>

  <table class="table table-striped">
    <tr>
      <th>id</th>
      <td><%= @task.id %></td>
    </tr>
    <tr>
      <th>タスク</th>
      <td><%= @task.content %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @task.status %></td>
    </tr>
  </table>

<%= link_to '編集する', edit_task_path(@task), class: "btn btn-default" %>
<%= link_to '削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいでしょうか？'}, class: "btn btn-danger" %>